<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.x1user.atlas.UserAreaActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/tvWelcomeMsg"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:text="Welcome"
        android:textSize="32sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ImageButton
        android:id="@+id/bAtlas"
        android:layout_width="292dp"
        android:layout_height="288dp"
        app:srcCompat="@drawable/atlas"
        android:layout_marginTop="81dp"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcomeMsg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/bParty"
        android:layout_width="129dp"
        android:layout_height="48dp"
        android:text="Party"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bTextFeed"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/bAtlas"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcomeMsg" />

    <Button
        android:id="@+id/bTextFeed"
        android:layout_width="137dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="TextFeed"
        app:layout_constraintBottom_toTopOf="@+id/bAtlas"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bParty"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcomeMsg" />

    <ImageView
        android:id="@+id/bSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_manage"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bAtlas"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
